// üóÇÔ∏è Binder ‚Äî represents a user's collection folder or grouping of cards
model Binder {
  id        String   @id @default(uuid())
  name      String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String

  // Relation: A binder contains multiple cards
  cards     Card[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// üÉè Card ‚Äî represents a single Pok√©mon card in a user's collection
model Card {
  id           String     @id @default(uuid())
  title        String
  price        Int?
  condition    String
  description  String?
  imageUrls    String[]   // URLs to Supabase Storage images
  forSale      Boolean    @default(false)

  // reservation fields (prevent double-sell)
  reservedBy          User?   @relation("CardReservations", fields: [reservedById], references: [id], onDelete: SetNull)
  reservedById        String?
  reservedUntil       DateTime?
  reservedCheckoutSessionId String? @unique

  // Optional enrichment fields (future-proof)
  tcgPlayerId  String
  language     String
  cardNumber   String?
  setName      String?
  rarity       String?

  // Relations
  binder       Binder?    @relation(fields: [binderId], references: [id], onDelete: SetNull)
  binderId     String?
  owner        User       @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  ownerId      String
  offers       Offer[]
  transactions CardTransaction[]
  orders       Order[]

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Order {
  id                String   @id @default(uuid())
  card              Card     @relation(fields: [cardId], references: [id], onDelete: Cascade)
  cardId             String

  seller             User     @relation("SellerOrders", fields: [sellerId], references: [id], onDelete: Cascade)
  sellerId           String
  buyer              User     @relation("BuyerOrders", fields: [buyerId], references: [id], onDelete: Cascade)
  buyerId            String

  amount             Int      // store cents
  currency           String   @default("sgd")
  status             String   @default("PENDING") // PENDING | PAID | EXPIRED | CANCELED | REFUNDED

  stripeCheckoutSessionId String? @unique
  stripePaymentIntentId   String? @unique

  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  transactions       CardTransaction[]
}


// üí∏ Offer ‚Äî represents an offer made by a buyer on a card
model Offer {
  id          String   @id @default(uuid())
  price       Int?
  message     String?
  status      String   @default("pending") // pending | accepted | rejected

  // Relations
  card        Card     @relation(fields: [cardId], references: [id], onDelete: Cascade)
  cardId      String
  buyer       User     @relation("UserOffers", fields: [buyerId], references: [id], onDelete: Cascade)
  buyerId     String

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model CardTransaction {
  id            String @id @default(uuid())

  order         Order  @relation(fields: [orderId], references: [id], onDelete: Cascade)
  orderId       String

  card          Card   @relation(fields: [cardId], references: [id], onDelete: Cascade)
  cardId        String

  seller        User   @relation("SellerTransactions", fields: [sellerId], references: [id], onDelete: Cascade)
  sellerId      String

  buyer         User   @relation("BuyerTransactions", fields: [buyerId], references: [id], onDelete: Cascade)
  buyerId       String

  amount        Int
  currency      String
  stripeEventId String @unique

  createdAt     DateTime @default(now())
}

